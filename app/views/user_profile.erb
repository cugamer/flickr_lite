<div class="container">
  <% if session[:user_id] %>

    <form method="post" action="/users/logout">
      <input type="submit" value="Logout">
    </form>

    <form method="get" action="/albums/new">
      <input type="submit" value="Create New Album">
    </form>

    <form method="post" action="/users/<%= session[:user_id] %>/albums">
      <input type="submit" value="View Albums">
    </form>

  <% end %>
</div>
